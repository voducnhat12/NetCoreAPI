@model MvcMovie.Models.InvoiceModel

@{
    ViewData["Title"] = "Tính tiền hóa đơn";
}

<h2>Tính tiền hóa đơn</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Số lượng:</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div>
        <label>Đơn giá (VND):</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Tính tiền</button>
</form>

@if (ViewBag.TotalPrice != null)
{
    <h3>Kết quả:</h3>
    <p>Tổng tiền: <b>@ViewBag.TotalPrice VND</b></p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
